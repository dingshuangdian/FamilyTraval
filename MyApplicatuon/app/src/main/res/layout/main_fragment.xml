<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="90dip"
    android:background="@color/background_color"
    android:gravity="center_horizontal|center_vertical"
    android:orientation="horizontal"
    android:paddingTop="16dp">


    <LinearLayout
        android:id="@+id/myPoint"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1.0"
        android:background="@drawable/view_bg_clickable_selector"
        android:clickable="true"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/my"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/my" />

        <TextView
            android:id="@+id/home_menu_categroy_txtv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:text="我的积分"
            android:textColor="@color/gray"
            android:textSize="12sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/pointP"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1.0"
        android:background="@drawable/view_bg_clickable_selector"
        android:clickable="true"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/my1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/my1" />

        <TextView
            android:id="@+id/home_menu_categroy_txtv1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:text="积分排名"
            android:textColor="@color/gray"
            android:textSize="12sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/pointD"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1.0"
        android:background="@drawable/view_bg_clickable_selector"
        android:clickable="true"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/my2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/my2" />

        <TextView
            android:id="@+id/home_menu_shopcart_txtv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:text="积分详情"
            android:textColor="@color/gray"
            android:textSize="12sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/pointC"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1.0"
        android:background="@drawable/view_bg_clickable_selector"
        android:clickable="true"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/my3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/my3" />

        <TextView
            android:id="@+id/home_menu_order_txtv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:text="积分审核"
            android:textColor="@color/gray"
            android:textSize="12sp" />
    </LinearLayout>
</LinearLayout>