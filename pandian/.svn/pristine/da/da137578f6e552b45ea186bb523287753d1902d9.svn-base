	public static  DBHelper getInstance(Context context) {
		if (instance == null) {			
			instance = new DBHelper(context);
		}
		return instance;
	}
	
	
	public DBHelper(Context context) {
		super(context, DATABASE_NAME, null, DATABASE_VERSION);
	}
	

	@Override
	public void onCreate(SQLiteDatabase db) {
		// TODO Auto-generated method stub
		db.execSQL(CREATE_USER_SQL);
		db.execSQL(CREATE_DEPT_SQL);
		db.execSQL(CREATE_PLAN_SQL);
		//初始化一条用户数据为超级管理员
		db.execSQL("insert into users(user_id,user_code,user_name,user_pass,dept_id)values('','sbd','超级管理员','93:36:EB:F2:50:87:D9:1C:81:8E:E6:E9:EC:29:F8:C1','')");
	}

	@Override
	public void onUpgrade(SQLiteDatabase db, int oldVersion, int newVersion) {
		// TODO Auto-generated method stub
		
		// 如果版本号改变了就需要看情况在此处对有变动的表做一个删除操作  不然表结构还是不会更新
		// 删除用户表
		// db.execSQL("DROP TABLE IF EXISTS users");
		
		onCreate(db);
	}

}
