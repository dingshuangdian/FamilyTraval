	/**创建计划表sql*/
	public static final String CREATE_PLAN_SQL = "CREATE TABLE "
			+ " plans " + " (" + "id" + " integer  primary key autoincrement," + "det_id"
			+ " TEXT varchar(25), " + "check_id"
