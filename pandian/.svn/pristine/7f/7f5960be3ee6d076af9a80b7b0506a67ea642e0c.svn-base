<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/transparent" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_l"
            android:layout_marginRight="@dimen/margin_l"
            android:layout_marginTop="@dimen/margin_l" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/marks"
                android:textColor="@color/gray"
                android:textSize="@dimen/font16" />

            <TextView
                android:id="@+id/et_marks"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_corner_with_gray"
                android:padding="@dimen/margin_l"
                android:textSize="@dimen/font16" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_l"
            android:layout_marginRight="@dimen/margin_l"
            android:layout_marginTop="@dimen/margin_l" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/means_code"
                android:textColor="@color/gray"
                android:textSize="@dimen/font16" />

            <EditText
                android:id="@+id/et_meanscode"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_edittext"
                android:hint="@string/means_code_hint"
                android:padding="@dimen/margin_l"
                android:singleLine="true"
                android:textSize="@dimen/font16"
                android:maxLength="20" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_l"
            android:layout_marginRight="@dimen/margin_l"
            android:layout_marginTop="@dimen/margin_l" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/device_code"
                android:textColor="@color/gray"
                android:textSize="@dimen/font16" />

            <EditText
                android:id="@+id/et_devicecode"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_edittext"
                android:hint="@string/device_code_hint"
                android:padding="@dimen/margin_l"
                android:singleLine="true"
                android:textSize="@dimen/font16" 
                android:maxLength="20"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_l"
            android:layout_marginRight="@dimen/margin_l"
            android:layout_marginTop="@dimen/margin_l" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/device_name"
                android:textColor="@color/blue"
                android:textSize="@dimen/font16" />

            <EditText
                android:id="@+id/et_devicename"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_edittext"
                android:hint="@string/device_name_hint"
                android:padding="@dimen/margin_l"
                android:singleLine="true"
                android:textSize="@dimen/font16" 
                android:maxLength="40"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_l"
            android:layout_marginRight="@dimen/margin_l"
            android:layout_marginTop="@dimen/margin_l" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/xinghao"
                android:textColor="@color/gray"
                android:textSize="@dimen/font16" />

            <EditText
                android:id="@+id/et_xinghao"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_edittext"
                android:hint="@string/xinghao_hint"
                android:padding="@dimen/margin_l"
                android:singleLine="true"
                android:textSize="@dimen/font16"
                android:maxLength="40" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_l"
            android:layout_marginRight="@dimen/margin_l"
            android:layout_marginTop="@dimen/margin_l" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/guige"
                android:textColor="@color/gray"
                android:textSize="@dimen/font16" />

            <EditText
                android:id="@+id/et_guige"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_edittext"
                android:hint="@string/guige_hint"
                android:padding="@dimen/margin_l"
                android:singleLine="true"
                android:textSize="@dimen/font16"
                android:maxLength="40" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_l"
            android:layout_marginRight="@dimen/margin_l"
            android:layout_marginTop="@dimen/margin_l" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/chuchang_code"
                android:textColor="@color/gray"
                android:textSize="@dimen/font16" />

            <EditText
                android:id="@+id/et_chuchangcode"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_edittext"
                android:hint="@string/chuchang_code_hint"
                android:padding="@dimen/margin_l"
                android:singleLine="true"
                android:textSize="@dimen/font16"
                android:maxLength="20" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_l"
            android:layout_marginRight="@dimen/margin_l"
            android:layout_marginTop="@dimen/margin_l" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/factory"
                android:textColor="@color/gray"
                android:textSize="@dimen/font16" />

            <EditText
                android:id="@+id/et_factory"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_edittext"
                android:hint="@string/factory_hint"
                android:padding="@dimen/margin_l"
                android:singleLine="true"
                android:textSize="@dimen/font16"
                android:maxLength="40" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_l"
            android:layout_marginRight="@dimen/margin_l"
            android:layout_marginTop="@dimen/margin_l" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/build_address"
                android:textColor="@color/blue"
                android:textSize="@dimen/font16" />

            <EditText
                android:id="@+id/et_buildaddress"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_edittext"
                android:hint="@string/build_address_hint"
                android:padding="@dimen/margin_l"
                android:singleLine="true"
                android:textSize="@dimen/font16"
                android:maxLength="60" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_l"
            android:layout_marginRight="@dimen/margin_l"
            android:layout_marginTop="@dimen/margin_l" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/remarks"
                android:textColor="@color/gray"
                android:textSize="@dimen/font16" />

            <EditText
                android:id="@+id/et_remarks"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_edittext"
                android:hint="@string/remarks_hint"
                android:padding="@dimen/margin_l"
                android:singleLine="true"
                android:textSize="@dimen/font16"
                android:maxLength="200" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_l"
            android:layout_marginLeft="@dimen/margin_l"
            android:layout_marginRight="@dimen/margin_l"
            android:layout_marginTop="@dimen/margin_l" >

            <Button
                android:id="@+id/bt_delete"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/margin_l"
                android:layout_weight="1"
                android:background="@drawable/selector_bluebtn"
                android:gravity="center"
                android:onClick="doDelete"
                android:text="撤销"
                android:textColor="@color/white"
                android:visibility="gone" />

            <Button
                android:id="@+id/bt_add"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/selector_bluebtn"
                android:gravity="center"
                android:onClick="doSave"
                android:text="保存"
                android:textColor="@color/white" />
        </LinearLayout>
    </LinearLayout>

</ScrollView>