<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/transparent" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/radioLayout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_l"
            android:layout_marginRight="@dimen/margin_l"
            android:layout_marginTop="@dimen/margin_l" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/is_right"
                android:textColor="@color/gray"
                android:textSize="@dimen/font16" />

            <RadioGroup
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <RadioButton
                    android:id="@+id/radio_right"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:button="@drawable/selector_radio"
                    android:checked="true"
                    android:text="相符"
                    android:textColor="@color/gray"
                    android:textSize="@dimen/font14" />

                <RadioButton
                    android:id="@+id/radio_wrong"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:button="@drawable/selector_radio"
                    android:text="不相符"
                    android:textColor="@color/gray"
                    android:textSize="@dimen/font14" />
            </RadioGroup>
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_l"
            android:layout_marginRight="@dimen/margin_l"
            android:layout_marginTop="@dimen/margin_l" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/means_code"
                android:textColor="@color/gray"
                android:textSize="@dimen/font16" />

            <TextView
                android:id="@+id/et_meanscode"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_edittext_unable"
                android:padding="10dp"
                android:singleLine="false" 
                android:textSize="@dimen/font16"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_l"
            android:layout_marginRight="@dimen/margin_l"
            android:layout_marginTop="@dimen/margin_l" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/device_code"
                android:textColor="@color/gray"
                android:textSize="@dimen/font16" />

            <TextView
                android:id="@+id/et_devicecode"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_edittext_unable"
                android:padding="10dp"
                android:singleLine="false"
                android:textSize="@dimen/font16" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_l"
            android:layout_marginRight="@dimen/margin_l"
            android:layout_marginTop="@dimen/margin_l" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/device_name"
                android:textColor="@color/gray"
                android:textSize="@dimen/font16" />

            <TextView
                android:id="@+id/et_devicename"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_edittext_unable"
                android:padding="10dp"
                android:singleLine="false" 
                android:textSize="@dimen/font16"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_l"
            android:layout_marginRight="@dimen/margin_l"
            android:layout_marginTop="@dimen/margin_l" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/xinghao"
                android:textColor="@color/gray"
                android:textSize="@dimen/font16" />

            <TextView
                android:id="@+id/et_xinghao"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_edittext_unable"
                android:padding="10dp"
                android:singleLine="false" 
                android:textSize="@dimen/font16"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_l"
            android:layout_marginRight="@dimen/margin_l"
            android:layout_marginTop="@dimen/margin_l" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/guige"
                android:textColor="@color/gray"
                android:textSize="@dimen/font16" />

            <TextView
                android:id="@+id/et_guige"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_edittext_unable"
                android:padding="10dp"
                android:singleLine="false"
                android:textSize="@dimen/font16" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_l"
            android:layout_marginRight="@dimen/margin_l"
            android:layout_marginTop="@dimen/margin_l" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/chuchang_code"
                android:textColor="@color/gray"
                android:textSize="@dimen/font16" />

            <TextView
                android:id="@+id/et_chuchangcode"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_edittext_unable"
                android:padding="10dp"
                android:singleLine="false"
                android:textSize="@dimen/font16" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_l"
            android:layout_marginRight="@dimen/margin_l"
            android:layout_marginTop="@dimen/margin_l" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/chuchang_date"
                android:textColor="@color/gray"
                android:textSize="@dimen/font16" />

            <TextView
                android:id="@+id/et_chuchangdate"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_edittext_unable"
                android:padding="10dp"
                android:singleLine="false"
                android:textSize="@dimen/font16" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_l"
            android:layout_marginRight="@dimen/margin_l"
            android:layout_marginTop="@dimen/margin_l" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/build_address"
                android:textColor="@color/gray"
                android:textSize="@dimen/font16" />

            <TextView
                android:id="@+id/et_buildaddress"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_edittext_unable"
                android:padding="10dp"
                android:singleLine="false" 
                android:textSize="@dimen/font16"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_l"
            android:layout_marginRight="@dimen/margin_l"
            android:layout_marginTop="@dimen/margin_l" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/remarks"
                android:textColor="@color/gray"
                android:textSize="@dimen/font16" />

            <EditText
                android:id="@+id/et_remarks"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_edittext"
                android:hint="@string/remarks_hint"
                android:padding="10dp"
                android:singleLine="false"
                android:textSize="@dimen/font16" 
                android:maxLength="200"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_l"
            android:layout_marginLeft="@dimen/margin_l"
            android:layout_marginRight="@dimen/margin_l"
            android:layout_marginTop="@dimen/margin_l" >
            <Button
                android:id="@+id/btn_save"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/selector_bluebtn"
                android:gravity="center"
                android:onClick="doSave"
                android:text="保存"
                android:textColor="@color/white"
                android:textSize="@dimen/font16" />
        </LinearLayout>
    </LinearLayout>

</ScrollView>