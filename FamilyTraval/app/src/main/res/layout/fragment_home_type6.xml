<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include
        layout="@layout/titlle_menu6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></include>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/title_pic" />

    <View style="@style/separator_line" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="340dip"
        android:background="@color/bg_activity"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="220dip"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="1.0"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/cagorg1"
                    android:layout_width="match_parent"
                    android:layout_height="0dip"
                    android:layout_weight="1.0"
                    android:scaleType="fitXY"
                    android:src="@drawable/cagorg1" />

                <View style="@style/separator_line" />

                <ImageView
                    android:id="@+id/cagorg2"
                    android:layout_width="match_parent"
                    android:layout_height="0dip"
                    android:layout_weight="1.0"
                    android:scaleType="fitXY"
                    android:src="@drawable/cagorg2" />
            </LinearLayout>


            <View style="@style/separator_line_vertical" />

            <LinearLayout
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="1.0"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/cagorg3"
                    android:layout_width="match_parent"
                    android:layout_height="0dip"
                    android:layout_weight="1.0"
                    android:scaleType="fitXY"
                    android:src="@drawable/cagorg3" />

                <View style="@style/separator_line" />

                <ImageView
                    android:id="@+id/cagorg4"
                    android:layout_width="match_parent"
                    android:layout_height="0dip"
                    android:layout_weight="1.0"
                    android:scaleType="fitXY"
                    android:src="@drawable/cagorg4" />
            </LinearLayout>
        </LinearLayout>

        <View style="@style/separator_line" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="120dip"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/cagorg5"
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="1.0"
                android:scaleType="fitXY"
                android:src="@drawable/cagorg5" />

            <View style="@style/separator_line_vertical" />

            <ImageView
                android:id="@+id/cagorg6"
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="1.0"
                android:scaleType="fitXY"
                android:src="@drawable/cagorg6" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>